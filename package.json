{
  "name": "@slightlyoff/share-button",
  "description": "A web component for sharing.",
  "author": "Alex Russell <slightlyoff@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git@github.com:slightlyoff/share-button.git"
  },
  "scripts": {
    "build": "npm run subset-node",
    "subset-node": "node subset.mjs",
    "subset": "./subset.sh",
    "prepare": "npx esbuild --bundle share-button.js --outfile=share-button.min.js --minify --format=esm --target=esnext && npx esbuild --bundle share-button.js --outfile=share-button.min.no-fonts.js --minify --format=esm --target=esnext --drop-labels=FONTS"
  },
  "files": [
    "share-button.js",
    "share-button.min.js",
    "share-button.min.no-fonts.js"
  ],
  "license": "MIT",
  "version": "0.5.1",
  "main": "share-button.js",
  "module": "share-button.js",
  "keywords": [
    "web components",
    "web share"
  ],
  "devDependencies": {
    "esbuild": "^0.25.8",
    "subset-font": "^2.4.0"
  }
}
